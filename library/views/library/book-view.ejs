<table class="table table-striped table-sm  mt-3">
  <thead>
    <tr>
      <th scope="col">Обложка</th>
      <th scope="col">Название</th>
      <th scope="col">Автор</th>
      <th scope="col">Описание</th>
      <th scope="col">Просмотров</th>
      <th scope="col">Файл</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td style="width: 150px;">
        <img class="w-100" src="<%= `/public/covers/${book.fileCover}` %>" alt="Обложка книги <%= book.title %>">
      </td>
      <td><%= book.title %></td>
      <td><%= book.authors %></td>
      <td><%= book.description %></td>
      <td><%= views %></td>
      <td>
        <a class="btn btn-sm btn-success" href="<%= `/public/books/${book.fileName}` %>" download="<%= `${book.title}` %>">
          <i class="fa fa-download" aria-hidden="true"></i>
        </a>
      </td>
      <td class="text-right">
        <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
          <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <form action="/books/delete/<%= book.id %>" method="get" class="d-inline">
          <button class="btn btn-sm btn-danger">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </form>
      </td>
    </tr>

  </tbody>
</table>